<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MonthViewActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/lastMonthButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="이전"
            app:backgroundTint="#40A83D" />

        <TextView
            android:id="@+id/yearMonthText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="@string/sampleYearMonth"/>

        <Button
            android:id="@+id/nextMonthButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="다음"
            app:backgroundTint="#3A95BF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sunTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F4F087"
            android:gravity="center_horizontal"
            android:text="일"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/monTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F4F087"
            android:gravity="center_horizontal"
            android:text="월"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F4F087"
            android:gravity="center_horizontal"
            android:text="화"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/wedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F4F087"
            android:gravity="center_horizontal"
            android:text="수"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/thuTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F4F087"
            android:gravity="center_horizontal"
            android:text="목"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/friTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F4F087"
            android:gravity="center_horizontal"
            android:text="금"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/satTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#F4F087"
            android:gravity="center_horizontal"
            android:text="토"
            android:textColor="#000000" />

    </LinearLayout>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gridView"
        app:columnCount="6"
        app:rowCount="7"
        app:orientation="horizontal"
        >

    </androidx.gridlayout.widget.GridLayout>


</LinearLayout>


